{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/views/imageSearch.ts",
    "src/views/imageSearch.ts",
    "src/api/search.js",
  ]
}
